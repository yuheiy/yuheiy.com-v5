{
	"scripts": {
		"clean": "rm -rf dist",
		"build": "npm-run-all clean build:styles build:eleventy",
		"build:eleventy": "DEBUG=* ELEVENTY_ENV=production eleventy",
		"build:styles": "sass --embed-sources --embed-source-map src/_styles:src/_includes",
		"start": "npm-run-all clean --parallel watch:*",
		"watch:eleventy": "eleventy --serve --quiet",
		"watch:styles": "npm run build:styles -- --watch"
	},
	"devDependencies": {
		"@11ty/eleventy": "^0.11.0",
		"@11ty/eleventy-plugin-rss": "^1.0.9",
		"fast-glob": "^3.2.4",
		"gray-matter": "^4.0.2",
		"husky": "^4.3.0",
		"luxon": "^1.25.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.1.2",
		"pretty-quick": "^3.0.2",
		"sass": "^1.26.11"
	},
	"engines": {
		"node": ">=12"
	},
	"private": true,
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"lint-staged": {
		"*.{js,json,yml,scss}": "prettier --write"
	}
}
